{
  "yaml.schemas": {
    "./schemas/qorix-core-idl.schema.json": [
      "configurations/**/service-interfaces/*.yaml",
      "configurations/**/applications/*.yaml",
      "configurations/**/service-instances/*.yaml",
      "configurations/**/execution/*.yaml",
      "configurations/**/machine/*.yaml"
    ],
    "./schemas/qorix-overlay.schema.json": [
      "overlays/**/*.yaml",
      "deployment/**/*.yaml"
    ]
  },
  "yaml.validate": true,
  "yaml.format.enable": true,
  "yaml.format.singleQuote": false,
  "yaml.customTags": ["!!map", "!!seq"],
  "files.associations": {
    "*.qorix.yaml": "yaml",
    "*.qorix.yml": "yaml"
  }
}
